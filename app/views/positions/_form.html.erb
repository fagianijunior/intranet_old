<%= simple_form_for(@position, html: { class: "form-horizontal", multipart: true }, defaults: { input_html: { class: "form-control" }, label: false }) do |f| %>
  <%= f.error_notification %>

  <div class="col-md-5">
    <div class="form-inputs">
      <%= f.input :position, placeholder: "Cargo" %>
    </div>
    <div class="form-actions">
      <hr>
      <%= f.button :submit, "Salvar" %>
    </div>
  </div>
<% end %>
