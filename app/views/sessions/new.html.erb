<h1 class="col-sm-11 text-center">Logar</h1>

<%= form_for(:session, url: sessions_path, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <div class="form-group">
    <div class="col-sm-11">
      <%= f.text_field :email, class: "form-control", placeholder: :email.capitalize %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-11">
      <%= f.password_field :password, class: "form-control", placeholder: :senha.capitalize %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-11">
      <%= f.submit "Logar", class: "btn btn-primary btn-default btn-block" %>
    </div>
  </div>
<% end %>
