<div class="row clearfix">
  <div class="col-md-2 column">
    <%= render "admin/menu" %>
  </div>
  <div class="col-md-10 column">
    <div class="row clearfix">
      <div class="col-md-12 column">
        <%= link_to 'Novo funcionÃ¡rio', new_user_path, class: "btn btn-primary" %>
        <hr>
      </div>
      <div class="col-md-12 column">
        <% @users.each do |user| %>
          <div class="col-md-3">
            <div class="thumbnail">
              <%= image_tag user.avatar.medium if user.avatar? %>
              <div class="caption">
                <h3>
                  <%= user.name %>
                </h3>
                <p>
                  <ul>
                    <li>
                      <%= user.position.position %>
                    </li>
                    <li>
                      <%= user.branch.branch %>
                    </li>
                  </ul>
                </p>
                <p>
                  <%= link_to 'Detalhes', user, class: "btn btn-primary" %>
                  <%= link_to 'Editar', edit_user_path(user), class: "btn btn-primary"%>
                  <!--%= link_to 'Destroy', employee, method: :delete, data: { confirm: 'Are you sure?' } % -->
                </p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

