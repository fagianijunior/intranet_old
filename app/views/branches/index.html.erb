<div class="row clearfix">
  <div class="col-md-2 column">
    <%= render "admin/menu" %>
  </div>
  <div class="col-md-10 column">
    <div class="row clearfix">
      <div class="col-md-12 column">
        <%= link_to 'Nova filial', new_branch_path, class: "btn btn-primary" %>
        <hr>
      </div>
      <div class="col-md-12 column">
        <table class="table">
          <thead>
            <tr>
              <th>Filial</th>
              <th>EndereÃ§o</th>
              <th>Estado</th>
              <th>Cidade</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @branches.each do |branch| %>
              <tr>
                <td><%= branch.branch %></td>
                <td><%= branch.address %></td>
                <td><%= branch.state.state %></td>
                <td><%= branch.city.city %></td>
                <td><%= link_to 'Detalhes', branch %></td>
                <td><%= link_to 'Editar', edit_branch_path(branch) %></td>
                <td><%= link_to 'Remover', branch, method: :delete, data: { confirm: 'Tem certeza que deseja excluir?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
